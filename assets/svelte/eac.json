{
  "Applications": {
    "{{$1}}-public-web-svelte": {
      "Details": {
        "Description": "A basic starting point for sites built with Svelte.",
        "Name": "Svelte - Headless Websites - Forked Recipe"
      },
      "LookupConfig": {
        "PathRegex": "/.*"
      },
      "Package": {
        "Details": {
          "Build": "latest",
          "Path": "lcu-github-artifacts-release.yml"
        },
        "SourceControlLookup": "github://{{ORGANIZATION}}/public-web-svelte",
        "Type": "GitHubLowCodeUnit"
      },
      "Processor": {
        "Details": {
          "BaseHref": "/",
          "DefaultFile": "index.html"
        },
        "Type": "DFSProcessor"
      }
    }
  },
  "Environments": {
    "{{EaC.PrimaryEnvironment}}": {
      "Artifacts": {
        "svelte-build-release": {
          "Type": "GitHubArtifact",
          "Details": {
            "Name": "Svelte Build/Release",
            "Output": "./public",
            "BuildCommand": "npm run build",
            "InstallCommand": "npm ci",
            "NPMRegistry": "https://registry.npmjs.org/"
          }
        }
      },
      "DevOpsActions": {
        "github-artifacts-release-svelte": {
          "ArtifactLookups": ["svelte-build-release"],
          "Details": {
            "Name": "GitHub Artifacts - Release - Svelte",
            "Path": "lcu-github-artifacts-release.yml",
            "Templates": [
              "https://raw.githubusercontent.com/lowcodeunit/infrastructure/master/github/actions/artifacts/_header.hbs.yml",
              "https://raw.githubusercontent.com/lowcodeunit/infrastructure/master/github/actions/artifacts/release-flow.yml"
            ]
          }
        }
      },
      "Sources": {
        "fork|github://fathym-it/public-web-svelte": {
          "DevOpsActionTriggerLookups": ["github-artifacts-release-svelte"],
          "Details": {
            "Branches": ["main"],
            "MainBranch": "main",
            "Organization": "{{ORGANIZATION}}",
            "Repository": "public-web-svelte",
            "Name": "github://{{ORGANIZATION}}/public-web-svelte"
          },
          "Type": "GitHubSourceControl"
        }
      }
    }
  },
  "Projects": {
    "{{PROJECT_LOOKUP}}": {
      "ApplicationLookups": [
        "{{$1}}-public-web-svelte"
      ]
    }
  }
}
